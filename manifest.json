{
  "manifest_version": 3,
  "name": "Forced colors emulation",
  "description": "Enable and disable forced colors emulation quickly !",
  "version": "1.0",
  "minimum_chrome_version": "89",
  "permissions": ["debugger", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*", "file://*/*"],
  "action": {
    "default_title": "Enable forced colors emulation"
  },
  "background": {
    "service_worker": "background.js"
  }
}
